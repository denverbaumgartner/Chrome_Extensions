{
  "manifest_version": 2,
  "name": "Aspin Chrome Extension",
  "version": "1.0",
  "description": "An extension aide users in organizing research and writing",

  "icons": {
    "16": "icons/get_started16.png",
    "48": "icons/get_started48.png",
    "128": "icons/get_started128.png"
  },
  "browser_action": {
    "default_icon": "icons/get_started16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["highLight_Event.js"], 
    "persistent": false
  },

  "commands": {
    "save_function": {
      "suggested_keys": {
        "default": "Ctrl+i", 
        "mac": "Command+i"
      }
    }
  },

  "permissions": [
    "storage", 
    "contextMenus"
  ]
    
  }